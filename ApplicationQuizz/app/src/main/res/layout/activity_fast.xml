<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gaetan.applicationquizz.FastActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="left"
            android:text="@string/question"
            android:textSize="35sp"
            android:textColor="@color/colorPrimaryDark"
             />

        <TextView
            android:id="@+id/BestScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/scoreAffiche"
            app:layout_constraintBottom_toTopOf="@+id/titre"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/testscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:gravity="center"
            android:text="TextView"
            android:textSize="25sp"
           />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/titre"
        >

        <Button
            android:id="@+id/response1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="reponse1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titre" />

        <Button
            android:id="@+id/response2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="reponse2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/response1"
            app:layout_constraintTop_toBottomOf="@+id/titre" />

        <Button
            android:id="@+id/response3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="reponse3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/response1"
            />

        <Button
            android:id="@+id/response4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="reponse4"
            />

    </LinearLayout>



</LinearLayout>
